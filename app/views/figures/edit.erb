<h1>Edit Figure</h1>

<form action='/figures/<%=@figure.id%>' method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Figure Name:</label>
  <br></br>
  <input type="text" name="figure[name]" id="figure_name" value=<%=@figure.name%>>
  <br></br>
  <label>Choose an existing title:</label>
  <br></br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <% end %>
  <br></br>
  <label>Create a new title:</label>
  <br></br>
  <input type="text" name="title[name]" id="new_title">
  <br></br>
  <label>Choose an existing landmark:</label>
  <br></br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <% end %>

  <br></br>
  <label>Create a new landmark:</label>
  <br></br>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <br></br>
  <label>Year Completed:</label>
  <br></br>
  <input type="text" name="landmark[year_completed]"></input>
  <br></br>

  <input type="submit" value="Edit Figure">
</form>