<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label>Figure Name:</label>
  <br></br>
  <input type="text" name="figure[name]" id="figure_name">
  <br></br>
  <label>Choose an existing title:</label>
  <br></br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%>
  <% end %>
  <br></br>
  <label>Create a new title:</label>
  <br></br>
  <input type="text" name="title[name]" id="new_title">
  <br></br>
  <label>Choose an existing landmark:</label>
  <br></br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%>
  <% end %>

  <br></br>
  <label>Create a new landmark:</label>
  <br></br>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>
  <label>Year Completed:</label>
  <br></br>
  <input type="text" name="landmark[year_completed]">
  <br></br>

  <input type="submit" value="Create New Figure">
</form>